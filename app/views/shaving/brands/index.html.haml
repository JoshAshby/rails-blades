.row
  .col-md-4.col-md-offset-4
    %h1 Brands

- if @brands.any?
  .row
    .col-md-4.col-md-offset-4
      = link_to 'New', new_shaving_brand_path, class: 'btn btn-default'

.row
  .col-md-4.col-md-offset-4
    - if @brands.any?
      %ol
        - @brands.each do |brand|
          %li
            = link_to brand.name, brand
    - else
      .jumbotron
        %p There are no brands yet. Want to make one?
        = link_to 'New Brand', new_shaving_brand_path, class: 'btn btn-default'

