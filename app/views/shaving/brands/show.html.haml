.row
  .col-md-12
    %h1 #{ @brand.name }

.row
  .col-md-6
    %h3 Products
    - if @brand.products.any?
      - @brand.products.each do |product|
        %li
          = link_to product.name, product
    - else
      .jumbotron
        %p There are no products for this brand yet. Want to make one?
        = link_to 'New Product', new_shaving_product_path(:brand_id => @brand.id), class: 'btn btn-default'

.row
  .col-md-12
    = link_to 'Edit', edit_shaving_brand_path(@brand), class: 'btn btn-default'
