= form_for @brand, html: {class: 'form'} do |f|
  .row
    .col-md-12
      - if @brand.errors.any?
        .error-explanation
          %strong.text-danger Couldn't save brand (#{ pluralize @brand.errors.count, "error" })
          %ul
            - @brand.errors.full_messages.each do |msg|
              %li
                = msg
  .row
    .col-md-12
      .form-group
        = f.label :name, class: 'control-label'
        = f.text_field :name, class: 'form-control'

  .row
    .col-md-6
      = f.submit class: 'btn btn-primary'

    - unless @brand.new_record?
      .col-md-6
        = link_to 'Delete', shaving_brand_path(@brand), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger pull-right'

