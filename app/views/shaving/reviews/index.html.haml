.row
  .col-md-12
    %h1 Reviews

- if @reviews.any?
  .row
    .col-md-12
      = link_to 'New', new_shaving_review_path, class: 'btn btn-default'

.row
  .col-md-12
    - if @reviews.any?
      %ol
        - @reviews.each do |review|
          %li
            = link_to review.product.name, review

    - else
      .jumbotron
        - if @products.any?
          %p There are no reviews yet. Want to make one?
          = link_to 'New Review', new_shaving_review_path, class: 'btn btn-default'

        - else
          %p There are no products yet. Want to make a new product first?
          = link_to 'New Product', new_shaving_product_path, class: 'btn btn-default'
