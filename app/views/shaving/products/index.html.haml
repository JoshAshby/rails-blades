.row
  .col-md-4.col-md-offset-4
    %h1 Products

- if @products.any?
  .row
    .col-md-4.col-md-offset-4
      = link_to 'New', new_shaving_product_path, class: 'btn btn-default'

.row
  .col-md-4.col-md-offset-4
    - if @products.any?
      %ol
        - @products.each do |product|
          %li
            = link_to product.name, product

    - else
      .jumbotron
        %p There are no products yet. Want to make one?
        = link_to 'New product', new_shaving_product_path, class: 'btn btn-default'
