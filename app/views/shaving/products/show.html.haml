.row
  .col-md-12
    %h1 #{ @product.name }

.row
  .col-md-12
    %strong Brand:
    = link_to @product.brand.name, @product.brand
    %strong Type:
    = @product.type.name

.row
  .col-md-12
    %p
      = @product.description

.row
  .col-md-12
    = link_to 'Edit', edit_shaving_product_path(@product), class: 'btn btn-default'

.row
  .col-md-12
    %h3 Reviews
    - @product.reviews.each do |review|
      %p
        = review.comments

      .btn-group
        = link_to 'View Review', review, class: 'btn btn-default'
        = link_to 'Edit Review', edit_shaving_review_path(review), class: 'btn btn-default'

      %hr
