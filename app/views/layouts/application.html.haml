%html
  %head
    %title Riverside
    = stylesheet_link_tag    'application', params[:controller], media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', params[:controller], 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    -if flash[:notice]
      .container
        .alert.alert-info
          = flash[:notice]

    -if flash[:warning]
      .container
        .alert.alert-warning
          = flash[:warning]

    -if flash[:error]
      .container
        .alert.alert-danger
          = flash[:error]

    .container-fluid
      = yield
