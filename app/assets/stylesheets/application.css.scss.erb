@import "bootstrap-sprockets";
@import "bootstrap";

$background: whitesmoke;

$font_family: 'http://fonts.googleapis.com/css?family=IM+Fell+Great+Primer+SC';


@import url($font_family);


body {
  font-family: 'IM Fell Greate Primer SC', serif;
  font-size: 16px;

  padding-top: 10px;

  background: url(<%= asset_url 'background-noise.png' %>);
