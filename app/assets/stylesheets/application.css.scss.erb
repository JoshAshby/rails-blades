@import "bootstrap-sprockets";
@import "bootstrap";

$background: whitesmoke;

$font_family: 'http://fonts.googleapis.com/css?family=Alike+Angular';


@import url($font_family);


body {
  font-family: 'Alike Angular', serif;
  font-size: 16px;

  padding-top: 10px;

  background: url(<%= asset_url 'background-noise.png' %>);
  background-color: $background;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  text-transform: uppercase;
}

.col-md-1,
.col-md-2,
.col-md-3,
.col-md-4,
.col-md-5,
.col-md-6,
.col-md-7,
.col-md-8,
.col-md-9,
.col-md-10,
.col-md-11,
.col-md-12 {
  background-color: white;
}

.btn {
  margin-bottom: 15px;
}
