@import "bootstrap-sprockets";
@import "bootstrap";

a:hover, a:active {
  text-decoration: none;
}

body {
  font-family: serif;
  font-size: 16px;

  color: black;

  background: url(<%= asset_url 'shaving/natural_paper.png' %>);
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Diner Fatt', sans-serif;
  letter-spacing: 2px;
  text-transform: uppercase;
}

h1:first-letter{
  font-size: 56px;
}

h2:first-letter{
  font-size: 50px;
}

h3:first-letter{
  font-size: 44px;
}

h4:first-letter{
  font-size: 30px;
}

h5:first-letter{
  font-size: 25px;
}

h6:first-letter{
  font-size: 22px;
}

.content {
  padding-bottom: 20px;

  border-left: 1px rgb(151, 151, 151) solid;
  border-right: 1px rgb(151,151,151) solid;
  background-color: rgba(100, 100, 100, 0.3);
}

.btn {
  margin-bottom: 10px;
  margin-top: 10px;
}

.header {
  font-family: 'Diner Fatt', sans-serif;

  h1 {
    text-align: center;

    transform: rotate(-14deg);

    font-family: inherit;
    font-size: 50px;
    font-style: italic;

    &:first-letter {
      font-size: 80px;
    }

    a {
      color: black;
    }
  }

  h3 {
    font-family: serif;

    position: relative;

    top: 45px;
    left: 95px;
  }

  h5 {
    font-family: serif;

    position: relative;

    float: right;

    left: -130px;
  }
}
