@import "bootstrap-sprockets";
@import "bootstrap";

a:hover, a:active {
  text-decoration: none;
}

$background: whitesmoke;

$font_family: 'http://fonts.googleapis.com/css?family=Alike+Angular';

@import url($font_family);

body {
  font-family: 'Alike Angular', serif;
  font-size: 16px;

  color: black;

  background: radial-gradient(ellipse at center, rgba(0,0,0,0) 50%, rgba(0,0,0,0.26) 75%), url(<%= asset_url 'shaving/paper_texture_3.jpg' %>);
}

h1,
h2,
h3,
h4,
h5,
h6 {
  text-transform: uppercase;
}

h1:first-letter{
  font-size: 56px;
}

h2:first-letter{
  font-size: 50px;
}

h3:first-letter{
  font-size: 44px;
}

h4:first-letter{
  font-size: 30px;
}

h5:first-letter{
  font-size: 25px;
}

h6:first-letter{
  font-size: 22px;
}

.content {
  <%#background-color: white;%>

  padding-bottom: 20px;
}

.btn {
  margin-bottom: 10px;
  margin-top: 10px;
}

.header {
  text-align: center;
  padding-top: 20px;
  padding-bottom: 20px;

  h1 {
    transform: rotate(-15deg);

    font-size: 50px;
    font-style: italic;

    &:first-letter {
      font-size: 80px;
    }

    a {
      color: black;
    }
  }
}
