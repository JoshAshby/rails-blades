!!! 5
%html
  %head
    %title Shaving
    = stylesheet_link_tag    'shaving/application', params[:controller], media: 'all'
    = javascript_include_tag 'shaving/application', params[:controller]
    = csrf_meta_tags

  %body.shaving
    -if flash[:notice]
      .container
        .alert.alert-info
          = flash[:notice]

    -if flash[:warning]
      .container
        .alert.alert-warning
          = flash[:warning]

    -if flash[:error]
      .container
        .alert.alert-danger
          = flash[:error]

    .container-fluid
      .row
        .col-md-6.col-md-offset-3.content
          .header
            %h3 Ashby's
            %h1 #{ link_to "Catalog of Shaving Supplies!", shaving.root_path }
            %h5 #{ link_to "JoshIsA.Ninja", main_app.root_path }

          = yield
