!!! 5
%html
  %head
    %title Shaving
    = stylesheet_link_tag    'shaving/application', params[:controller], media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'shaving/application', params[:controller], 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body.shaving
    -if flash[:notice]
      .container
        .alert.alert-info
          = flash[:notice]

    -if flash[:warning]
      .container
        .alert.alert-warning
          = flash[:warning]

    -if flash[:error]
      .container
        .alert.alert-danger
          = flash[:error]

    .container-fluid
      .row
        .col-md-6.col-md-offset-3.content
          .header
            %h1 #{ link_to "Shaving Things and Other Things!", root_path }

          = yield
